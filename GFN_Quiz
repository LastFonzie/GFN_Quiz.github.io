let filteredQuestions = [];
let currentQuestion = 0;
let score = 0;
let answeredCount = 0;
let correctCount = 0;
let incorrectCount = 0;

const questionEl = document.getElementById("question");
const answersEl = document.getElementById("answers");
const scoreEl = document.getElementById("score");
const statsEl = document.getElementById("stats");
const feedbackEl = document.getElementById("feedback");
const nextBtn = document.getElementById("next-btn");
const progressEl = document.getElementById("progress");
const lfFilter = document.getElementById("lf-filter");

lfFilter.addEventListener("change", () => {
  startQuiz();
});

function startQuiz() {
  const selectedLF = lfFilter.value;
  filteredQuestions = selectedLF === "all"
    ? [...allQuestions]
    : allQuestions.filter(q => q.lf === selectedLF);

  shuffleArray(filteredQuestions);
  currentQuestion = 0;
  score = 0;
  answeredCount = 0;
  correctCount = 0;
  incorrectCount = 0;
  updateStats();
  feedbackEl.textContent = "";
  feedbackEl.className = "";
  nextBtn.style.display = "none";
  loadQuestion();
}

function shuffleArray(array) {
  for (let i = array.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [array[i], array[j]] = [array[j], array[i]];
  }
}

function loadQuestion() {
  if (filteredQuestions.length === 0 || currentQuestion >= filteredQuestions.length) {
    questionEl.textContent = "Keine Fragen für diese Auswahl gefunden.";
    answersEl.innerHTML = `<button onclick="startQuiz()" style="background-color: #007bff;">Erneut versuchen</button>`;
    progressEl.textContent = "Frage 0 von 0";
    nextBtn.style.display = "none";
    updateStats();
    feedbackEl.textContent = "";
    return;
  }
  const q = filteredQuestions[currentQuestion];
  questionEl.textContent = q.question;
  answersEl.innerHTML = "";
  q.answers.forEach((ans, index) => {
    const btn = document.createElement("button");
    btn.textContent = ans;
    btn.className = "answer";
    btn.onclick = () => selectAnswer(btn, index);
    answersEl.appendChild(btn);
  });
  progressEl.textContent = `Frage ${currentQuestion + 1} von ${filteredQuestions.length}`;
  nextBtn.style.display = "none";
  feedbackEl.textContent = "";
  feedbackEl.className = "";
}

function selectAnswer(selectedButton, index) {
  const q = filteredQuestions[currentQuestion];
  const correctIndex = q.correct;
  const buttons = answersEl.getElementsByClassName("answer");

  // Disable all buttons after an answer is selected
  for (let btn of buttons) {
    btn.disabled = true;
    btn.classList.add("disabled");
  }

  answeredCount++;
  if (index === correctIndex) {
    score++;
    correctCount++;
    selectedButton.classList.add("correct");
    feedbackEl.textContent = "Richtig!";
    feedbackEl.className = "correct";
  } else {
    incorrectCount++;
    selectedButton.classList.add("incorrect");
    buttons[correctIndex].classList.add("correct");
    feedbackEl.textContent = `Falsch! Die richtige Antwort ist: "${q.answers[correctIndex]}"`;
    feedbackEl.className = "incorrect";
  }

  updateStats();
  nextBtn.style.display = "block";
  nextBtn.focus();
}

nextBtn.onclick = () => {
    currentQuestion++;
    if (currentQuestion < filteredQuestions.length) {
      loadQuestion();
    } else {
      showResults();
    }
};

function showResults() {
  questionEl.textContent = "Quiz beendet!";
  answersEl.innerHTML = `<button onclick="startQuiz()" style="background-color: #007bff;">Neu starten</button>`;
  progressEl.textContent = `Frage ${filteredQuestions.length} von ${filteredQuestions.length}`;
  feedbackEl.textContent = `Dein Endergebnis: ${correctCount} von ${answeredCount} richtig.`;
  feedbackEl.className = "";
  nextBtn.style.display = "none";
}

function updateStats() {
    scoreEl.textContent = `Punktestand: ${score}`;
    statsEl.textContent = `Beantwortet: ${answeredCount} | Richtig: ${correctCount} | Falsch: ${incorrectCount}`;
}

document.addEventListener("DOMContentLoaded", () => {
  startQuiz();
});
</script>
</body>
</html>
